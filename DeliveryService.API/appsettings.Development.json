{
  "ConnectionStrings": {
    "SqlServer": "Server=localhost,1433;Database=OrderDb;User=sa;Password=Password12*;TrustServerCertificate=True"
  },

  //// MsSql-e yazmaq
  "Serilog": {
    "Using": [ "Serilog.Sinks.MSSqlServer" ],
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      },
      "WriteTo": [
        {
          "Name": "MSSqlServer",
          "Args": {
            "connectionString": "Server=localhost,1433;Database=OrderDb;User=sa;Password=Password12*;TrustServerCertificate=True",
            "tableName": "LogEntries",
            "autoCreateSqlTable": true
          },
          "Filter": [
            {
              "Name": "ByLevel",
              "Args": {
                "minimumLevel": "Information"
              }
            }
          ]
        }
      ]
    },

    "OrderServiceBaseUrl": "https://localhost:7184",

    "Logging": {
      "LogLevel": {
        "Default": "Information",
        "Microsoft.AspNetCore": "Warning"
      }
    }
  }
}